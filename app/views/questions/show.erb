<div class="container">
	<h1><%= @question.title %></h1>

		<p style="color:blue">
			<%= @question.content %>
		</p>

	<ul id="#question-comments">
		<% @question.comments.each do |comment| %>
			<li><%= comment.content %> - votes: (<%= comment.votes.reduce(0) {|total, vote| total + vote.value } %>)</li>
		<% end %><br>
		<% if @question_errors %>
			<% @question_errors.each do |error| %>
				<%= error %>
			<% end %>
		<% end %>
	</ul>
		<form action='/questions/<%= @question.id %>/comments/new'method="post">
			<label for="comment">Make a comment: </label>
			<input type="text" name="content">
			<input type="submit" value="Comment"><br>
		</form>

<hr>
<h2>Answers:</h2>

		<ul>
			<% @question.answers.each do |answer| %>
				<li style="color:red"><%= answer.content %></li>
				<p style="color:green">Comments:</p>

					<ul>
						<% answer.comments.each do |comment| %>
							<li><%= comment.content %> - votes: (<%= comment.votes.reduce(0) {|total, vote| total + vote.value } %>)</li>
						<% end %>
					</ul><br>
		</ul>
		<% if @answer_comment_errors && @bad_answer_id == answer.id %>
				<% @answer_comment_errors.each do |error| %>
				<%= error %>
			<% end %>
		<% end %>
		<form action='/questions/<%= @question.id %>/answer/<%= answer.id %>/new' method="post">
			<label for="comment">Make a comment: </label>
			<input type="text" name="content">
			<input type="submit" value="Comment"><br>
		</form><br>
			<% end %>


		<% if @answer_errors %>
			<% @answer_errors.each do |error| %>
				<%= error %>
			<% end %>
		<% end %>

		<form action='/questions/<%= @question.id %>/answers/new' method="post">
			<label for="comment">Have another answer to this question? Post below. </label><br><br>
			<textarea rows="10" cols="50" name="content"></textarea><br>
			<input type="submit" value="Comment"><br>
		</form>

</div>


